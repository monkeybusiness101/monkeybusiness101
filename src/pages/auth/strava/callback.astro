---
const code = Astro.url.searchParams.get("code");
const error = Astro.url.searchParams.get("error");
const scope = Astro.url.searchParams.get("scope");

// Debug logging
console.log("URL:", Astro.url.href);
console.log("Search params:", Astro.url.searchParams.toString());
console.log("Code:", code);
console.log("Error:", error);
console.log("Scope:", scope);

let tokenData = null;
let errorMessage = null;

if (error) {
  errorMessage = `Authorization error: ${error}`;
} else if (code) {
  try {
    // Exchange code for access token
    const response = await fetch("https://www.strava.com/oauth/token", {
      method: "POST",
      headers: {
        "Content-Type": "application/x-www-form-urlencoded",
      },
      body: new URLSearchParams({
        client_id: "165153",
        client_secret: "d88dc10353cf0b5cd18360234d407d7e34b44f49",
        code: code,
        grant_type: "authorization_code",
      }),
    });

    if (response.ok) {
      tokenData = await response.json();
    } else {
      const errorData = await response.json();
      errorMessage = `Token exchange failed: ${JSON.stringify(errorData)}`;
    }
  } catch (err) {
    errorMessage = `Error: ${err.message}`;
  }
} else {
  errorMessage = "No authorization code received";
}
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Strava Authorization Result</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 min-h-screen flex items-center justify-center p-4">
    <div class="bg-white p-8 rounded-lg shadow-md max-w-2xl w-full">
      <h1 class="text-2xl font-bold mb-6 text-center">
        Strava Authorization Result
      </h1>

      {
        errorMessage ? (
          <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
            <h2 class="text-red-800 font-semibold mb-2">Error</h2>
            <p class="text-red-700">{errorMessage}</p>
          </div>
        ) : tokenData ? (
          <div class="space-y-6">
            <div class="bg-green-50 border border-green-200 rounded-md p-4">
              <h2 class="text-green-800 font-semibold mb-2">‚úÖ Success!</h2>
              <p class="text-green-700">
                Your Strava account has been authorized successfully.
              </p>
            </div>

            <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
              <h3 class="text-blue-800 font-semibold mb-3">
                üîë Your New Access Token
              </h3>
              <div class="space-y-3">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">
                    Access Token:
                  </label>
                  <input
                    type="text"
                    value={tokenData.access_token}
                    readonly
                    class="w-full p-2 border border-gray-300 rounded font-mono text-sm bg-gray-50"
                    onclick="this.select()"
                  />
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">
                    Refresh Token:
                  </label>
                  <input
                    type="text"
                    value={tokenData.refresh_token}
                    readonly
                    class="w-full p-2 border border-gray-300 rounded font-mono text-sm bg-gray-50"
                    onclick="this.select()"
                  />
                </div>
                <div class="grid grid-cols-2 gap-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">
                      Expires At:
                    </label>
                    <input
                      type="text"
                      value={new Date(
                        tokenData.expires_at * 1000,
                      ).toISOString()}
                      readonly
                      class="w-full p-2 border border-gray-300 rounded font-mono text-sm bg-gray-50"
                    />
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">
                      Athlete ID:
                    </label>
                    <input
                      type="text"
                      value={tokenData.athlete?.id || "N/A"}
                      readonly
                      class="w-full p-2 border border-gray-300 rounded font-mono text-sm bg-gray-50"
                    />
                  </div>
                </div>
              </div>
            </div>

            <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
              <h3 class="text-yellow-800 font-semibold mb-2">üìù Next Steps</h3>
              <ol class="text-yellow-700 text-sm space-y-2">
                <li>1. Copy the access token above</li>
                <li>2. Update your environment variables:</li>
                <li class="ml-4">
                  <code class="bg-white p-2 rounded block mt-1">
                    export STRAVA_ACCESS_TOKEN={tokenData.access_token}
                    <br />
                    export STRAVA_REFRESH_TOKEN={tokenData.refresh_token}
                  </code>
                </li>
                <li>3. Restart your development server</li>
                <li>
                  4. Visit{" "}
                  <a href="/workout" class="text-blue-600 underline">
                    /workout
                  </a>{" "}
                  to see your activities!
                </li>
              </ol>
            </div>
          </div>
        ) : (
          <div class="text-center">
            <p class="text-gray-600">Processing authorization...</p>
          </div>
        )
      }

      <div class="mt-6 text-center">
        <a href="/workout" class="text-blue-600 hover:text-blue-800 underline">
          ‚Üê Back to Workout Page
        </a>
      </div>
    </div>
  </body>
</html>
