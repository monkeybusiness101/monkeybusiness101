---
import Layout from "../layouts/Layout.astro";
import background from "../assets/background.svg";
---

<Layout>
  <img id="background" src={background.src} alt="" fetchpriority="high" />
  <main>
    <h1>store</h1>
    <p>
      welcome to my store! here you can browse and purchase my products and
      services.
    </p>

    <section class="products">
      <h2>featured products</h2>
      <div class="product-grid">
        <div class="product-card">
          <h3>digital services</h3>
          <p>custom web development, design, and digital solutions</p>
          <div class="price">starting at $299</div>
          <button class="cta-button">get quote</button>
        </div>

        <div class="product-card">
          <h3>consulting</h3>
          <p>business strategy, technology consulting, and project guidance</p>
          <div class="price">$150/hour</div>
          <button class="cta-button">book session</button>
        </div>

        <div class="product-card">
          <h3>courses</h3>
          <p>online courses and educational content for developers</p>
          <div class="price">coming soon</div>
          <button class="cta-button disabled" disabled>notify me</button>
        </div>
      </div>
    </section>

    <section class="contact-section">
      <h2>interested in working together?</h2>
      <p>reach out to discuss your project and get a custom quote</p>
      <button class="contact-button">contact me</button>
    </section>
  </main>
</Layout>

<style>
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }

  main {
    padding: 40px 20px;
    max-width: 900px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  h1 {
    color: #333;
    margin-bottom: 20px;
    font-size: 2.5rem;
  }

  h2 {
    color: #333;
    margin: 40px 0 24px 0;
    font-size: 1.8rem;
  }

  h3 {
    color: #333;
    margin-bottom: 12px;
    font-size: 1.3rem;
  }

  p {
    line-height: 1.6;
    color: #666;
    margin-bottom: 30px;
  }

  .products {
    margin: 50px 0;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
    margin-top: 30px;
  }

  .product-card {
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid #e0e0e0;
    border-radius: 12px;
    padding: 24px;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }

  .product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    background: rgba(255, 255, 255, 0.95);
  }

  .product-card p {
    color: #666;
    margin-bottom: 20px;
    font-size: 0.95rem;
  }

  .price {
    font-size: 1.4rem;
    font-weight: 600;
    color: #007acc;
    margin-bottom: 20px;
  }

  .cta-button {
    background: linear-gradient(135deg, #007acc 0%, #0056b3 100%);
    color: white;
    border: none;
    padding: 12px 24px;
    border-radius: 8px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    width: 100%;
  }

  .cta-button:hover:not(:disabled) {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(0, 122, 204, 0.3);
  }

  .cta-button.disabled {
    background: #ccc;
    cursor: not-allowed;
  }

  .contact-section {
    text-align: center;
    margin: 60px 0 40px 0;
    padding: 40px;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 16px;
    backdrop-filter: blur(10px);
  }

  .contact-button {
    background: linear-gradient(135deg, #333 0%, #555 100%);
    color: white;
    border: none;
    padding: 16px 32px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1.1rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .contact-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(51, 51, 51, 0.3);
  }

  @media screen and (max-width: 768px) {
    .product-grid {
      grid-template-columns: 1fr;
    }

    h1 {
      font-size: 2rem;
    }

    .contact-section {
      padding: 24px;
    }
  }
</style>
